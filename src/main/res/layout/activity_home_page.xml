<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.project.jingdong.activities.HomePageActivity">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"></FrameLayout>

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_weight="2"
            android:background="@drawable/tab_optionhome"
            android:button="@null"
            android:checked="true"
            android:gravity="center_horizontal" />

        <RadioButton
            android:id="@+id/classify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_weight="2"
            android:background="@drawable/tab_optionclassify"
            android:button="@null"
            android:gravity="center_horizontal" />

        <RadioButton
            android:id="@+id/display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_weight="2"
            android:background="@drawable/tab_optiondisplay"
            android:button="@null"
            android:gravity="center_horizontal" />

        <RadioButton
            android:id="@+id/cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_weight="2"
            android:background="@drawable/tab_optioncart"
            android:button="@null"
            android:gravity="center_horizontal" />

        <RadioButton
            android:id="@+id/myself"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_weight="2"
            android:background="@drawable/tab_optionme"
            android:button="@null"
            android:gravity="center_horizontal" />
    </RadioGroup>
</LinearLayout>
